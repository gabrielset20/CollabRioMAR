<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    android:background="#FFE09B">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="249dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="99dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textBoasVindas"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImage"
        android:layout_alignStart="@+id/logoImage"
        android:layout_alignEnd="@+id/logoImage"
        android:layout_marginStart="-62dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-67dp"
        android:fontFamily="@font/montserrat"

        android:text="Bem-vindos ao Collab Rio Mar app!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_below="@+id/textBoasVindas"
        android:layout_alignStart="@+id/textBoasVindas"
        android:layout_alignEnd="@+id/textBoasVindas"
        android:layout_marginStart="-17dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="-19dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Explore e colabore com a Plataforma Colaborativa de Monitoramento de Objetos Plásticos em Rios e Mares (Fluvial). Este aplicativo georreferenciado permite que você registre e visualize ocorrências de poluição plástica utilizando seu celular."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>