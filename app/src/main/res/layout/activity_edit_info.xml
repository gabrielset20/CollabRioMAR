<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/azul_escuro">

    <ImageView
        android:id="@+id/ivEditProfilePicture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/circulo_background"
        android:contentDescription="Foto do perfil"
        android:src="@drawable/perfil_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangePicture"
        android:layout_width="153dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:radius="40dp"
        android:text="Alterar Foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivEditProfilePicture" />

    <EditText
        android:id="@+id/etEditName"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/settings_background"
        android:hint="Digite seu nome"
        android:fontFamily="@font/montserrat"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnChangePicture" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="Salvar"
        android:fontFamily="@font/montserrat_bold"
        android:radius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEditName" />

</androidx.constraintlayout.widget.ConstraintLayout>
